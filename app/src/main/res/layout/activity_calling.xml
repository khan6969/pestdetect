<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".CallingActivity">

    <ImageView
        android:id="@+id/image_calling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />


    <TextView
        android:id="@+id/callerTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calling"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="@string/name"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutcaller"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:hint="@string/calling"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutcaller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/makecall"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/phone"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            />
         <ImageView
             android:id="@+id/cancelcall"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_marginLeft="10dp"
             android:src="@drawable/hang"
             />
    </LinearLayout>


</RelativeLayout>